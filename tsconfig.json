{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2018",
    "sourceMap": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true
  },
  "references": [
    {
      "path": "./apps/bin"
    },
    {
      "path": "./apps/telegram-bot"
    }
  ],
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
